<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".SetupDeviceActivity">
    <TextView
        android:id="@+id/txtSaida1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saída 1"
        android:textSize="20sp" />
    <EditText
        android:id="@+id/edtSaida1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text" />

    <TextView
        android:id="@+id/txtSaida2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saída 2"
        android:textSize="20sp" />
    <EditText
        android:id="@+id/edtSaida2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text" />

    <TextView
        android:id="@+id/txtSaida3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saída 3"
        android:textSize="20sp" />
